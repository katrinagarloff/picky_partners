<h3>New Registration</h3>

<%= form_for @user do |f| %>

<div class="form-group">
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>

<div class="form-group">
  <%= f.label :username %>
  <%= f.text_field :username %>
</div>

<div class="form-group">
  <%= f.label :password %>
  <%= f.password_field :password %>
</div>

<div class="form-group">
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
</div>

  <%= f.submit "Sign Up!" %>

<% end %>
